<Window x:Class="HTree_Fractal_Generation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HTree_Fractal_Generation"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="500" Width="750">
    <Grid Background="Black" MouseDown="Grid_MouseDown" Name="DisableMePerClick">
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <Canvas Name="Can" >
                <Canvas Name="ZeroCan" Width="0" 
                        Height="0"/>                
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
